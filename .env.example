# ReferrAI Environment Variables
# Copy this file to .env and fill in your actual values

# Gemini API (for AI-generated content)
GEMINI_API_KEY=your_gemini_api_key_here
USE_GEMINI=false
GEMINI_MODEL=gemini-pro

# Google Sheets (for job data and persistence)
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id_here
GOOGLE_SHEETS_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_SHEETS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Hunter.io (for contact discovery)
HUNTER_API_KEY=your_hunter_api_key_here

# Gmail API (for sending emails)
GMAIL_CLIENT_ID=your_gmail_client_id_here
GMAIL_CLIENT_SECRET=your_gmail_client_secret_here
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token_here
GMAIL_FROM_EMAIL=your-email@gmail.com

# Email Sending Control
SEND_EMAILS=false

# Rate Limiting (optional)
EMAIL_RATE_LIMIT_PER_MINUTE=5
EMAIL_RATE_LIMIT_PER_HOUR=50
EMAIL_RATE_LIMIT_PER_DAY=500
EMAIL_DELAY_MS=2000
