# ReferrAI Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Gemini AI (for content generation)
# ============================================
GEMINI_API_KEY=your_gemini_api_key_here
USE_GEMINI=true
GEMINI_MODEL=gemini-pro

# ============================================
# Contact Discovery
# ============================================
# Apollo.io (primary - for website)
APOLLO_API_KEY=your_apollo_api_key_here

# Hunter.io (fallback/verification)
HUNTER_API_KEY=your_hunter_api_key_here

# Jobrights.io (optional, not currently used)
JOBRIGHTS_API_KEY=your_jobrights_api_key_here
JOBRIGHTS_BASE_URL=https://api.jobrights.io

# ============================================
# Job Search (for website)
# ============================================
JSEARCH_API_KEY=your_rapidapi_key_here

# ============================================
# Gmail API (for sending emails)
# ============================================
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token
GMAIL_FROM_EMAIL=your-email@gmail.com
SEND_EMAILS=false
EMAIL_RATE_LIMIT_PER_MINUTE=5
EMAIL_RATE_LIMIT_PER_HOUR=50
EMAIL_DELAY_MS=2000

# ============================================
# Google Sheets (for job data storage)
# ============================================
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id
GOOGLE_SHEETS_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_SHEETS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
